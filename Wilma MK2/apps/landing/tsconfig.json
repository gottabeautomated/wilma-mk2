{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@/auth/*": [
        "../../packages/auth/src/*"
      ],
      "@/database/*": [
        "../../packages/database/src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
